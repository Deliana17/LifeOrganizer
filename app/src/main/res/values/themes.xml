<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.LifeOrganizer" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_500</item>
        <item name="colorPrimaryDark">@color/primary_700</item>
        <item name="colorAccent">@color/secondary_500</item>

        <!-- Material components styles -->
        <item name="materialButtonStyle">@style/Widget.LifeOrganizer.Button</item>
        <item name="textInputStyle">@style/Widget.LifeOrganizer.TextInputLayout</item>

        <!-- Typography -->
        <item name="android:textAppearance">@style/TextAppearance.LifeOrganizer.Body</item>
    </style>

    <style name="Widget.LifeOrganizer.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/TextAppearance.LifeOrganizer.Button</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:minHeight">56dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
    </style>

    <style name="TextAppearance.LifeOrganizer.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.03</item>
    </style>

    <style name="Widget.LifeOrganizer.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary_500</item>
        <item name="boxStrokeWidth">1.5dp</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="hintTextColor">@color/primary_500</item>
        <item name="android:textColorHint">@color/light_on_surface_variant</item>
        <item name="android:textSize">16sp</item>
        <item name="startIconTint">@color/primary_500</item>
        <item name="endIconTint">@color/primary_500</item>
    </style>

    <style name="TextAppearance.LifeOrganizer.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/light_on_surface</item>
    </style>

    <style name="TextAppearance.LifeOrganizer.Title" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/light_on_surface</item>
        <item name="android:letterSpacing">0.02</item>
    </style>
</resources>